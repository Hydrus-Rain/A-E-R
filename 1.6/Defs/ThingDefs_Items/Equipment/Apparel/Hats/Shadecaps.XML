<?xml version='1.0' encoding='utf-8'?>
<Defs>

 <ThingDef ParentName="HatMakeableBase" Name="CowboyHat">
    <defName>Apparel_Thrumboshadecap</defName>
    <label>Thrumbo Shadecap</label>
    <description>A Large conical hat made of Petrilogs, reinforced by strips of Thrumbofur. Not as great as a proper helmet defense-wise.</description>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <displayPriority>100</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Equipment/Hats/Thrumbo/ThrumboCap_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
	
	
	<costList>
      <AER_Petrilogs>125</AER_Petrilogs>
	  <Leather_Thrumbo>75</Leather_Thrumbo>
    </costList>
	<recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
	  
	  <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
	  <li>FabricationBench</li>
	  </recipeUsers>
	  
      <displayPriority>300</displayPriority>
    </recipeMaker>
	
    <statBases>
      <MaxHitPoints>280</MaxHitPoints>
      <WorkToMake>1800</WorkToMake>
      <Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
	
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
    </equippedStatOffsets>
	
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Equipment/Hats/Thrumbo/ThrumboCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

</Defs>