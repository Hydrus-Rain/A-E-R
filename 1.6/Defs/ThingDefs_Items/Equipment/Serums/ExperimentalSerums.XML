<?xml version='1.0' encoding='utf-8'?>
<Defs>

  <!-- =================================   Thrumbo Serum ================================= -->
<ThingDef ParentName="AER_SerumBase">

    <defName>AER_ThrumboSerum</defName>
    <label>Thrumbo Augmentation Serum</label>
    <description>One of the First experimental augmentation serums made. Uses mechanites with the code of thrumbo genes to augment the body with thicker muscles and bones, and a greater resistance to the elements. Unfortunately slows down the augmented being due to the extra muscle and bone density.</description>
	
    <graphicData>
      <texPath>Things/Items/Serums/ThrumboSerum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	
    <rotatable>false</rotatable>
	
    <statBases>
      <WorkToMake>3600</WorkToMake>
      <MarketValue>100</MarketValue>
      <Mass>0.1</Mass>
    </statBases>
	
	<thingClass>ThingWithComps</thingClass>
    <techLevel>Industrial</techLevel>
	
	 <ingestible>
	 <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>AER_ThrumboSerumAugment</hediffDef>
          <severity>0.5</severity>
        </li>
	</outcomeDoers>
	</ingestible>
	
    <recipeMaker>
      <researchPrerequisite>EXAugserums</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <soundWorking>Recipe_Drug</soundWorking>
      <displayPriority>1500</displayPriority>
    </recipeMaker>
	
    <costList>
      <Neutroamine>75</Neutroamine>
	  <Steel>20</Steel>
	  <ComponentIndustrial>3</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
	  <ThrumboHorn>1</ThrumboHorn>
    </costList>

  </ThingDef>
  
