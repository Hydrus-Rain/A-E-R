<?xml version='1.0' encoding='utf-8'?>
<Defs>

<!-- =================================  Project: Pioneers's Standard ================================= -->


<!-- =================================  Pioneer's Rifle  ================================= -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>AER_PioneerRifle</defName>
    <label>Pioneer's Rifle</label>
       <description>A hardy yet easy to maintain rifle made by using the construction techniques as reference used in making the ancient brand of earth assault rifle.</description>
    <graphicData>
      <texPath>Things/Equipment/Weapons/Pioneer/PioneerRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  	  <drawSize>1.5,1.5</drawSize>
    </graphicData>
	<uiIconScale>1.0</uiIconScale>

    <soundInteract>Interact_Rifle</soundInteract>
	
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
	
    <statBases>
      <WorkToMake>12500</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
	
    <costList>
      <Steel>145</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
	
    <recipeMaker>	
		
	<recipeUsers>
		<li>ElectricSmithy</li>
		<li>FabricationBench</li>
	</recipeUsers>
	
      <researchPrerequisite>ProjectPioneerStandard</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
	  
    </recipeMaker>
	
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BoltActionRifle</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>39.9</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>11</muzzleFlashScale>
      </li>
    </verbs>
	
    <tools>
      
	  <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
	  
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
	  
    </tools>
  
  </ThingDef>
  
    <!-- ================================= Pioneer's Rifle Bullet (7.62 x 85) ================================= -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_PioneerRifle</defName>
    <label>Pioneer Rifle bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>28</damageAmountBase>
      <stoppingPower>1.8</stoppingPower>
      <speed>70</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  
      <!-- ================================= Pioneer's Shotgun ================================= -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>AER_PioneerShotgun</defName>
