    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Equipment/Weapons/Pioneer/PioneerShotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.5,1.5</drawSize>
    </graphicData>
	<uiIconScale>1.0</uiIconScale>
	
    <soundInteract>Interact_Shotgun</soundInteract>
	
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
	
    <statBases>
      <WorkToMake>13500</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.89</AccuracyShort>
      <AccuracyMedium>0.87</AccuracyMedium>
      <AccuracyLong>0.74</AccuracyLong>
      <RangedWeapon_Cooldown>1.12</RangedWeapon_Cooldown>
    </statBases>
	
    <costList>
      <Steel>125</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
	
    <recipeMaker>	
		
	<recipeUsers>
		<li>ElectricSmithy</li>
		<li>FabricationBench</li>
	</recipeUsers>
	
      <researchPrerequisite>ProjectPioneerStandard</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
	  
    </recipeMaker>
	
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PioneerShotgun</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>19.5</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>11</muzzleFlashScale>
      </li>
    </verbs>
	
    <tools>
	
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
	  
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
	  
	  <li>
        <label>Bayonet point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
	  
      <li>
        <label>Bayonet edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>21</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
	  
    </tools>
	
  </ThingDef>

