<?xml version='1.0' encoding='utf-8'?>
<Defs>
  <ThingDef ParentName="AnimalThingBase">
    <defName>AER_TyrianWeavercrab</defName>
    <label>Tyrian Weaver crab</label>
    <description>A large, land dwelling crab known for weaving nests out of fallen ribbontree leaves, stones, and its own saliva, resulting in rocky nests accented with a rich purple.</description>
    <statBases>
      <MoveSpeed>2.2</MoveSpeed>
      <MarketValue>120</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <LeatherAmount>0</LeatherAmount>
      <Wildness>0.65</Wildness>
    </statBases>
	
	<tools>
      <li>
        <label>right claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <label>left claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>

    <race>
      <body>AERBody_WeaverCrab</body>
      <baseBodySize>0.5</baseBodySize>
      <baseHungerRate>0.12</baseHungerRate>
      <baseHealthScale>0.6</baseHealthScale>
      <foodType>OmnivoreRoughAnimal</foodType>
      <lifeExpectancy>15</lifeExpectancy>
      <waterSeeker>false</waterSeeker>
      <gestationPeriodDays>7.661</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2.5, 1)</li>
          <li>(3, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2222</minAge>
          <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
          <soundDeath>Pawn_Megascarab_Death</soundDeath>
          <soundCall>Pawn_Megascarab_Call</soundCall>
          <soundAngry>Pawn_Megascarab_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <soundEating>Reptile_Eat</soundEating>
      <headPosPerRotation>
        <li>(0.0, 0, 0.11)</li>
        <li>(0.25, 0, 0.02)</li>
        <li>(0.01, 0, -0.02)</li>
        <li>(-0.52, 0, 0.02)</li>
      </headPosPerRotation>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

