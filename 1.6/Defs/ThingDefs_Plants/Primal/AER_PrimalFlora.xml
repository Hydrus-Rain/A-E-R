<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ============================================================= Carpets ============================================================== -->

    <!-- ============================================== Sunbloom Flower ================================================ -->
	<ThingDef ParentName="PlantBase">
    <defName>AER_Sunbloom</defName>
    <label>Sunbloom flower</label>
    <description>A flower reminiscent of the sun found in the Primal Forests. And no, much like the familiar sunflower, the seeds are not edible.</description>
    <statBases>
      <MaxHitPoints>95</MaxHitPoints>
      <Beauty>14</Beauty>
      <BeautyOutdoors>14</BeautyOutdoors>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Primal/Sunbloom</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>750</sowWork>
	  
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
	  
	  <sowResearchPrerequisites Inherit="False">
        <li>ABRT1</li>
      </sowResearchPrerequisites>
	  
	  <immatureGraphicPath>Things/Plants/Primal/Sunbloom_Immature</immatureGraphicPath>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>

  <!-- ============================================================= Foliage ============================================================== -->
  
    <!-- ============================================== Emberbloom Flower ================================================ -->
    <ThingDef ParentName="PlantBase">
    <defName>AER_EmberbloomFlowers</defName>
    <label>Emberbloom Flowers</label>
    <description>A rare plant native to the Primal Jungles which yields the Emberbloom Flowers. Emberbloom flowerbuds yield a special chemical that rapidly deteriorates upon extraction from the bulb, making it volatile enough to burn like fire, hence the name. The chemical is mainly used in biochemistry and some manufacturing processes.\n\nEmberbloom Flowers can only be found in the Primal Jungles, as any other environment usually keeps it from properly growing.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>0.5</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Primal/Emberbloom</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.1, 0.2, 0.1)</volume>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <pathCost>14</pathCost>
    <ingestible />
	
    <plant>
	
		<sowResearchPrerequisites Inherit="False">
        <li>ABRT1</li>
		</sowResearchPrerequisites>
	
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <growDays>7</growDays>
      <immatureGraphicPath>Things/Plants/Primal/Emberbloom_Immature</immatureGraphicPath>
      <harvestYield>3</harvestYield>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.3</harvestAfterGrowth>
      <harvestedThingDef>AER_EmberbloomBuds</harvestedThingDef>
      <visualSizeRange>0.6~1.1</visualSizeRange>
      <topWindExposure>0.1</topWindExposure>
      <wildOrder>2</wildOrder>
      <purpose>Misc</purpose>
      <allowAutoCut>false</allowAutoCut>
    </plant>
  </ThingDef>

  
    <!-- ============================================== Genobulb Bush ================================================ -->
    <ThingDef ParentName="PlantBase">
    <defName>AER_Genobulb_Bush</defName>
    <label>Genobulb Bush</label>
    <description>A slow-growing bush which yields genobulb when harvested. &quot;Very interesting, this one... as its fruits are quire useful in our endeavors. -Dr. H &quot;</description>
    <graphicData>
      <texPath>Things/Plants/Primal/GenoBush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
	<statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>0.5</Nutrition>
    </statBases>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <pathCost>14</pathCost>
	
    <ingestible />
	
    <plant>
	
	<sowTags>
		<li>Ground</li>
		<li>Hydroponic</li>
    </sowTags>
	
	<sowResearchPrerequisites Inherit="False">
        <li>ABRT1</li>
    </sowResearchPrerequisites>
	
	  <immatureGraphicPath>Things/Plants/Primal/GenoBush_Immature</immatureGraphicPath>
      <growDays>7</growDays>
      <harvestWork>1400</harvestWork>
      <harvestYield>15</harvestYield>      
	  <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.3</harvestAfterGrowth>
      <harvestedThingDef>AER_Genobulbs</harvestedThingDef>
	  <fertilitySensitivity>0.15</fertilitySensitivity>
      <wildClusterWeight>35</wildClusterWeight>
	  <visualSizeRange>0.9~1.7</visualSizeRange>
      <topWindExposure>0.1</topWindExposure>
      <wildOrder>2</wildOrder>
      <purpose>Misc</purpose>
      <allowAutoCut>false</allowAutoCut>
    </plant>
  </ThingDef>
  
  <!-- ============================================================= Trees ============================================================= -->
  
  <!-- ============================================== Lithowood ================================================ -->
  <ThingDef ParentName="TreeBase">
    <defName>AER_Lithowood</defName>
    <label>lithowood tree</label>
    <description>A special tree known for its Flame Resistant, rock-like bark, hence the name.</description>
    <graphicData>
      <texPath>Things/Plants/Primal/Lithowood</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <statBases>
	  <MaxHitPoints>350</MaxHitPoints>
      <Flammability>0.3</Flammability>
      <Beauty>1.2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
    </statBases>
    <plant>
		<sowResearchPrerequisites Inherit="False">
        <li>ABRT1</li>
		</sowResearchPrerequisites>
	
	  <immatureGraphicPath>Things/Plants/Primal/Lithowood_Immature</immatureGraphicPath>
      <growDays>30</growDays>
      <harvestWork>1400</harvestWork>
      <harvestYield>86</harvestYield>
      <wildClusterWeight>35</wildClusterWeight>
      <harvestedThingDef>AER_Petrilogs</harvestedThingDef>
    </plant>
  </ThingDef>
  
</Defs>
