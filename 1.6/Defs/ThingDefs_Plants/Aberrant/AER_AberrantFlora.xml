<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ============================================================= Carpets ============================================================== -->



  <!-- ============================================================= Foliage ============================================================== -->

  <!-- ============================================== HornFlower ================================================ -->
<ThingDef ParentName="PlantBase">
    <defName>AER_PollenHorn</defName>
    <label>Pollen Horn flower</label>
    <description>A fragrent flower found in the Aberrant Glades, Named after the slightly sweet scent of the cone like flowers.</description>
    <statBases>
      <MaxHitPoints>125</MaxHitPoints>
      <Beauty>14</Beauty>
      <BeautyOutdoors>14</BeautyOutdoors>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Aberrant/Pollenhorn</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>750</sowWork>
	  
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
	  
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>3.5</growDays>
      <lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>

  <!-- ============================================================= Trees ============================================================= -->
  
  <!-- ============================================== Ribbontree ================================================ -->
  <ThingDef ParentName="TreeBase">
    <defName>AER_Ribbontree</defName>
    <label>Ribbon tree</label>
    <description>A special tree known for its Fibrous, Velvet-like leaves, hence the name. Oddly enough, the trunk and branches are functionally similar to roots and are unfortunately useless as a resource.</description>
    <graphicData>
      <texPath>Things/Plants/Aberrant/Ribbontree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <statBases>
	  <MaxHitPoints>275</MaxHitPoints>
      <Flammability>0.3</Flammability>
      <Beauty>1.2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
    </statBases>
	
    <killedLeavingsChance>0.85</killedLeavingsChance>
    <killedLeavingsRanges>
      <AER_Genobulbs>4~25</AER_Genobulbs>
    </killedLeavingsRanges>
    <forceLeavingsAllowed>true</forceLeavingsAllowed>
	
    <plant>
	<dieIfLeafless>true</dieIfLeafless>
	  <immatureGraphicPath>Things/Plants/Aberrant/Ribbontree_Immature</immatureGraphicPath>
      <growDays>23</growDays>
      <harvestWork>1800</harvestWork>
	  <sowMinSkill>9</sowMinSkill>
	  
      <sowTags>
        <li>Ground</li>
      </sowTags>
	  
      <sowResearchPrerequisites Inherit="False">
        <li>ABRT1</li>
      </sowResearchPrerequisites>
	  
      <harvestYield>75</harvestYield>
      <wildClusterWeight>38</wildClusterWeight>
      <harvestedThingDef>AER_Velvetweave</harvestedThingDef>
    </plant>
  </ThingDef>
  
</Defs>
