<?xml version='1.0' encoding='utf-8'?>
<Defs>

<!-- =================================                          -T1 Regular Base Serums-                        ================================= -->
  
  
  <!-- =================================      Emberbloom Enzyme Serum    ================================= -->
  
  <HediffDef>
    <defName>AER_ThermEnzymeAugment</defName>
    <label>Emberbloom Enzyme Serum</label>
    <description>A serum made from emberbloom and genobulbs, made to increase tolerance against high temperatures. lasts for a week before needing to be reapplied.</description>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
	<hediffClass>HediffWithComps</hediffClass>
	
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>420000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
	
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMax>65</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
	
  </HediffDef>


<!-- =================================                          -T2 Experimental Augmentation Serums-                        ================================= -->

<!-- =================================      Thrumbo Serum Augmentation    ================================= -->
  <HediffDef>
    <defName>AER_ThrumboSerumAugment</defName>
    <label>Thrumbo Serum Augmentation</label>
    <description>An augmentation serum that restructures the body using a template extracted from thrumbo genes using mechanites, making them tougher and more resistant to temperature changes. Has the side effect of making the pawn slower due to the extra mass, and turns their hair white.</description>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
	<hairColorOverride>(250, 250, 250)</hairColorOverride>
    <isBad>false</isBad>
	<hediffClass>HediffWithComps</hediffClass>
	
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>10800000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
	
    <stages>
      <li>
        <statFactors>
          <IncomingDamageFactor>-0.7</IncomingDamageFactor>
          <MeleeDamageFactor>1.2</MeleeDamageFactor>
        </statFactors>
        <statOffsets>
          <MoveSpeed>-0.7</MoveSpeed>
          <ComfyTemperatureMin>-55</ComfyTemperatureMin>
          <ComfyTemperatureMax>25</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
	
  </HediffDef>
  
